---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'CTF', description = 'Challenge catalog, downloads, and scoreboard placeholders' } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <header class="mb-8">
    <div class="terminal-header">
      <span class="text-xs text-term-green/80">ACCESS: PUBLIC</span>
      <span class="text-xs text-term-green/60">ENV: PRODUCTION</span>
    </div>
    <h1 class="text-2xl font-bold text-term-green uppercase">{title}</h1>
    {description && (
      <p class="text-term-green/80 text-sm mt-2">{description}</p>
    )}
  </header>

  <section class="space-y-8">
    <slot />
  </section>
</BaseLayout>
